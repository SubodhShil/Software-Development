<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>Read Users</title>
        <link rel="stylesheet" href="/stylesheets/style.css" />
        <script src="https://cdn.tailwindcss.com"></script>
    </head>

    <body>
        <div class="w-full h-full bg-zinc-900 text-white p-10">
            <h1 class="text-3xl text-center pt-4">All Users</h1>

            <!-- links for switch between routes -->
            <div class="nav mb-10">
                <a href="/" class="text-blue-400 underline">Back to Home</a>
                <span>/</span>
            </div>

            <div class="users flex gap-3 mt-10">
                <% if(users.length > 0) { %> 
                    <% users.forEach(function(user) { %>
                        <div class="user w-72 p-5 bg-zinc-800 rounded-lg">
                            <div
                                class="w-full h-52 rounded-lg bg-zinc-500 overflow-hidden"
                            >
                                <img
                                    class="w-full h-full object-cover"
                                    src=" <%= user.image %> "
                                    alt=""
                                />
                            </div>
                            <h3 class="text-xl mt-3 tracking-tighter">
                                <%= user.name %>
                            </h3>
                            <h5 class="text-zinc-400"><%= user.email %></h5>
                            <div class="flex gap-3 mt-5">
                                <a
                                    class="p-1 rounded-md bg-yellow-400 text-black"
                                    href="/edit/<%= user._id %>"
                                    >Edit User</a
                                >
                                <a
                                    class="p-1 rounded-md bg-red-400 text-black"
                                    href="/delete/<%= user._id %>"
                                    >Delete User</a
                                >
                            </div>
                        </div>
                    <% }) %> 
                <% } else { %>
                    <h2 class="text-3xl w-full text-center text-red-600 font-bold">No User Found!</h2> 
                <% } %>
            </div>
        </div>
    </body>
</html>
